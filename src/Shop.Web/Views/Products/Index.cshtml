@using Shop.Core.Domain
@model List<Product>

<div class="row">
    <div class="col-lg-12">
        <a asp-area="" asp-controller="Products" asp-action="Add" class="btn btn-primary">Add products</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <h1>Products:</h1>

        

        <div class="list-group">
            @foreach (var product in Model)
            {
                <a href="#" title="Add to card" class="list-group-item list-group-item-action list-group-item-info">@product.Name [ @product.Price PLN]</a>
            }
        </div>


    </div>
</div>